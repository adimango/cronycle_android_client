<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape xmlns:android="http://schemas.android.com/apk/res/android"
	    android:shape="rectangle" android:padding="4dp">
	    <corners
	        android:bottomRightRadius="4dp"
	        android:bottomLeftRadius="4dp"
	        android:topLeftRadius="4dp"
	        android:topRightRadius="4dp"/>
	    <stroke android:width="1dip" android:color="#BBB" />
	    <gradient android:angle="-90" android:startColor="#DEDEDE" android:endColor="#CCC" /> 
	</shape>
 </item>
	 
	<item android:state_focused="true">
	     <shape xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" android:padding="4dp">
		    <corners
		        android:bottomRightRadius="4dp"
		        android:bottomLeftRadius="4dp"
		        android:topLeftRadius="4dp"
		        android:topRightRadius="4dp"/>
		    <stroke android:width="1dip" android:color="#DDD" />
		    <gradient android:angle="-90" android:startColor="#DDD" android:endColor="#DDD" /> 
		</shape>
	</item>  
	 
	<item>
	    <shape xmlns:android="http://schemas.android.com/apk/res/android"
		    android:shape="rectangle" android:padding="4dp">
		    <corners
		        android:bottomRightRadius="4dp"
		        android:bottomLeftRadius="4dp"
		        android:topLeftRadius="4dp"
		        android:topRightRadius="4dp"/>
		    <stroke android:width="1dip" android:color="#DDD" />
		    <gradient android:angle="-90" android:startColor="#FFF" android:endColor="#DDD" /> 
		</shape>
	</item>
	 
</selector>